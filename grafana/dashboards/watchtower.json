{
  "title": "CCC Watchtower - Gameplay Metrics",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Total Nomad Actions",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate(ccc_nomad_actions_total[5m]))",
          "legendFormat": "Actions/sec"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
    },
    {
      "id": 2,
      "title": "Resources Collected",
      "type": "graph",
      "targets": [
        {
          "expr": "sum by (resource_type) (rate(ccc_resources_collected_total[5m]))",
          "legendFormat": "{{resource_type}}"
        }
      ],
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
    },
    {
      "id": 3,
      "title": "Active Nomads",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(ccc_active_nomads)"
        }
      ],
      "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4}
    },
    {
      "id": 4,
      "title": "API Response Time",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(ccc_api_response_seconds_bucket[5m]))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": {"x": 6, "y": 8, "w": 18, "h": 8}
    }
  ],
  "refresh": "10s",
  "schemaVersion": 16,
  "version": 0
}
